@model Demo.Domain.Product
@{
    ViewData["Title"] = "ShopSingle";
}
<partial name="_LoginPartial" />
<hr />
<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a href="~/home/index">صفحه نخست</a> <span class="mx-2 mb-0">/</span> <a href="~/home/products">محصولات</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">@Model.Name</strong></div>
        </div>
    </div>
</div>
<!-- End Breadcrumb Section -->
<!-- Start Product Content Section -->
<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-5 mr-auto">
                <div class="border text-center">

                    @foreach (var item in Model.Medias)
                    {
                        <img src="@item.Path" alt="Image" class="img-fluid p-5">
                    }
                </div>
            </div>
            <div class="col-md-6">
                <h2 class="text-black">"@Model.Name"</h2>
                <p>@Model.Description</p>
                <form method="post" asp-controller="home" asp-action="addtocart">
                    <p>@Model.Price تومان</p>

                    <div class="mb-5">
                        <div class="input-group mb-3" style="max-width: 220px;">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline js-btn-minus" type="button">&minus;</button>
                            </div>
                            <input type="text" class="form-control text-center" name="qunaity" value="1" placeholder="" aria-label="Example text with button addone" aria-describedby="button-addon1">
                            <div class="input-group-append">
                                <button class="btn btn-outline js-btn-plus" type="button">&plus;</button>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="productId" value="@Model.ProductID">
                    <button type="submit" href="~/home/addtocart" class="btn btn-outline-light" style="background-color: rgb(114, 76, 150);">افزودن به سبد خرید</button>
                </form>
                @*<div class="mt-5">
                    <ul class="nav nav-pills mb-3 custom-pill" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link style="background-color:rebeccapurple" active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">جزئیات محصول</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="background-color:rebeccapurple" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">مشخصات ثبت</a>
                        </li>
                    </ul>*@
            </div>
        </div>
    </div>
</div>


